#!/bin/bash
# To Copy and rename the yml files in the config directory:-
#   * Type './configure'  in terminal.

cp config/database.example.yml config/database.yml
cp config/app.example.yml config/app.yml
cp config/rabbitmq.example.yml config/rabbitmq.yml
cp config/redis.example.yml config/redis.yml
cp config/consumers.example.yml config/consumers.yml
cp config/honeybadger.example.yml config/honeybadger.yml

mkdir -p log
